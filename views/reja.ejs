<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reja || Maqsad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>

<body style="background-color: #b8bbd1">
    <div class="container">
        <h1 class="display-4 text-center py-1">Reja va Maqsad</h1>

        <div class="jumbotron p-3 shadow-sm">
            <form id="create-form" action="/create-item" method="POST">
                <div class="d-flex align-items-center">
                    <input type="text" style="flex: 1; margin-right: 10px;" id="create-field" name="plan" autofocus
                        autocomplete="off" class="form-control mr-3" />
                    <button class="btn btn-primary" style="border-radius: 10px;">Add New Plan</button>
                </div>
            </form>
        </div>

        <ul id="item-list" class="list-group">
            <% items.forEach(item => { %>
                <li style="margin-bottom: 4px;" class="list-group-item list-group-item-info align-items-center d-flex justify-content-between">
                    <span class="item-text"><%= item.plan %></span>
                    <div>
                        <button data-id="<%= item._id %>" class="edit-me btn btn-secondary" style="border-radius: 4px; margin-top: 10px; padding: 2px 10px 2px 10px">Edit</button>
                        <button data-id="<%= item._id %>" class="delete-me btn btn-danger" style="border-radius: 4px; margin-top: 10px; padding: 2px 10px 2px 10px">Delete</button>
                    </div>
                </li>
            <% }) %>
        </ul>
        <button id="delete-all" class="btn btn-danger" style="border-radius: 4px; margin-top: 10px;">Hammasini ochirish</button>
    </div>

    <script>
        document.getElementById("create-form").addEventListener("submit", function(e) {
            e.preventDefault();
            axios.post('/create-item', { plan: document.getElementById('create-field').value }).then(response => {
                // Reload the page to get the updated list
                window.location.reload();
            }).catch(error => {
                console.error(error);
            });
        });

        document.querySelectorAll(".delete-me").forEach(button => {
            button.addEventListener("click", function() {
                if (confirm("Are you sure you want to delete this item?")) {
                    axios.delete('/delete-item', { data: { id: this.getAttribute("data-id") } }).then(response => {
                        // Reload the page to get the updated list
                        window.location.reload();
                    }).catch(error => {
                        console.error(error);
                    });
                }
            });
        });

        document.querySelectorAll(".edit-me").forEach(button => {
            button.addEventListener("click", function() {
                let newPlan = prompt("Enter the new plan", this.parentElement.parentElement.querySelector(".item-text").innerHTML);
                if (newPlan) {
                    axios.put('/update-item', { id: this.getAttribute("data-id"), plan: newPlan }).then(response => {
                        // Reload the page to get the updated list
                        window.location.reload();
                    }).catch(error => {
                        console.error(error);
                    });
                }
            });
        });

        document.getElementById("delete-all").addEventListener("click", function() {
            if (confirm("Are you sure you want to delete all items?")) {
                axios.delete('/delete-all-items').then(response => {
                    // Reload the page to get the updated list
                    window.location.reload();
                }).catch(error => {
                    console.error(error);
                });
            }
        });
    </script>
</body>

</html>
